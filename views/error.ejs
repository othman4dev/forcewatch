<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ForceWatch - Error</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.12.1/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="../public/style3.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/public/images/logo2.png" alt="ForceWatch logo">
      </a>
      <div class="ms-auto d-flex align-items-center">
        <a href="https://github.com/yourusername/forcewatch" class="icon-btn nav-link" title="GitHub Repository">
          <i class="bi bi-github"></i>
        </a>
        <a href="/docs" class="icon-btn nav-link" title="API Documentation">
          <i class="bi bi-code-slash"></i>
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="main-container">
    <div class="error-container">
      <i class="bi bi-exclamation-triangle-fill error-icon"></i>
      
      <h1 class="error-title"><%= statusCode || 'Error' %></h1>
      
      <p class="error-message"><%= message || 'Something went wrong. We apologize for the inconvenience.' %></p>
      
      <% if (statusCode) { %>
        <div class="error-code">Status: <%= statusCode %></div>
      <% } %>
      
      <% if (error && process.env.NODE_ENV !== 'production') { %>
        <div class="error-details">
          <div class="error-details-title">Error Details:</div>
          <%= error.stack || error %>
        </div>
      <% } %>
      
      <div class="action-buttons">
        <a href="/" class="btn btn-primary">
          <i class="bi bi-house-fill"></i> Back to Home
        </a>
        <button onclick="window.history.back()" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left"></i> Go Back
        </button>
      </div>
    </div>
  </div>
  
  <!-- Footer -->
  <footer>
    <div class="container">
      <p>Â© 2025 ForceWatch. All rights reserved.</p>
      <div>
        <a href="/privacy" class="text-muted me-3">Privacy Policy</a>
        <a href="/terms" class="text-muted me-3">Terms of Service</a>
        <a href="/contact" class="text-muted">Contact Us</a>
      </div>
    </div>
  </footer>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>